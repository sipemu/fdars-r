#!/bin/sh
# Undo configure's checksum rename so the tarball ships without hidden files
for f in src/rust/vendor/*/.cargo-checksum.json; do
    if [ -f "$f" ]; then
        mv "$f" "$(dirname "$f")/cargo-checksum.json"
    fi
done

# Remove generated Makevars (tarball ships Makevars.in; configure regenerates)
rm -f src/Makevars
